<%- include('partials/header') -%>
<main class="container">
  <div class="row justify-content-around mt-5">
    <div>
        <a href="/profile" class="col-2 btn btn-primary"> Return to Profile</a>
    </div>
    <hr>
    <div>
        <a href="/dropinForm" class="col-2 btn btn-primary"> Post a Dropin</a>
    </div>
  </div>
      <link rel="stylesheet" href="style.css">
</main>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="">
            <a href="/post/<%= posts[i]._id%>">
              <div class="postbox">
                <img class="postpic" src="<%= posts[i].image%>">
                <div>
                  <div class="infobox">
                   <h3><%=posts[i].title%></h3>
                  </div>
                  <div class="infobox">
                    <label for="location">Location: </label>
                    <%=posts[i].location%>
                  </div class="infobox">
                  <div class="infobox">
                    <label for="date">Date: </label>
                    <%=posts[i].date%>
                  </div>
                  <div class="infobox">
                    <label for="time">Time: </label>
                    <%=posts[i].time%>
                  </div>
                  <div class="infobox">
                    <label for="remarks">Remarks: </label>
                    <%=posts[i].remarks%>
                  </div>
                  <div class="infobox">
                    <label for="players">Players: </label>
                    <% for(var j=0; j<posts[i].players.length; j++) {%>
                      <span><%= posts[i].players[j] %></span>
                      <% } %>
                  </div>
                </div>
                <% if (posts[i].user == user) { %>
                <button class="btn btn-primary fa fa-trash"></button>
                <% }else{ %>
                <button class="btn btn-primary fa fa-plus"></button>
                  <% } %>
              </div>
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>